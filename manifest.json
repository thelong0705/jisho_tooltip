{
  "name": "Jisho Extension",
  "version": "1.0",
  "description": "Translate word from Japanese to English",
  "manifest_version": 2,
  "icons": {
    "512": "images/logo.png"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["jquery.js", "tooltip.js", "content.js"],
      "css": ["tooltip.css"]
    }
  ],

  "permissions": [
    "contextMenus",
    "https://*/"
  ]
}
